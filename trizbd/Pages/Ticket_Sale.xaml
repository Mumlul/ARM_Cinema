<Page x:Class="trizbd.Pages.Ticket_Sale"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="Продажа билетов">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="60,50,60,50">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="Продажа билетов" Style="{StaticResource PageTitle}"/>
                <TextBlock Text="ВЫБОР СЕАНСА • ВЫБОР МЕСТ • ОПЛАТА" Style="{StaticResource PageSubtitle}" Margin="0,10,0,0"/>

                <ComboBox x:Name="SessionsCb"
                          Margin="0,20,0,0"
                          Style="{StaticResource FormComboBox}"
                          DisplayMemberPath="Display"
                          SelectionChanged="SessionsCb_SelectionChanged"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="Схема зала" FontSize="20" FontWeight="SemiBold"/>
                            <Button Content="Очистить выбор" Style="{StaticResource OutlineButtonStyle}" Margin="20,0,0,0" Click="ClearSelectionBtn_Click"/>
                        </StackPanel>

                        <ItemsControl x:Name="SeatsIc">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="20"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Margin="5"
                                            Width="26"
                                            Height="26"
                                            Tag="{Binding}"
                                            Click="Seat_Click"
                                            Content="{Binding Label}"
                                            ToolTip="{Binding Tooltip}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#80251C3D"/>
                                                <Setter Property="BorderBrush" Value="#338B5CF6"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Setter Property="Foreground" Value="{DynamicResource TextMutedBrush}"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter Property="FontFamily" Value="{StaticResource FontMono}"/>
                                                <Setter Property="FontSize" Value="10"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsVoid}" Value="True">
                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                        <Setter Property="IsHitTestVisible" Value="False"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="Content" Value=""/>
                                                        <Setter Property="Cursor" Value="Arrow"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsOccupied}" Value="True">
                                                        <Setter Property="Background" Value="#40404040"/>
                                                        <Setter Property="BorderBrush" Value="#60606060"/>
                                                        <Setter Property="Foreground" Value="#FF666666"/>
                                                        <Setter Property="Cursor" Value="No"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <StackPanel Orientation="Horizontal" Margin="0,25,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,25,0">
                                <Border Width="18" Height="18" Background="#80251C3D" BorderBrush="#338B5CF6" BorderThickness="1" CornerRadius="2"/>
                                <TextBlock Text=" свободно" Style="{StaticResource MonoText}" FontSize="11" Foreground="{DynamicResource TextMutedBrush}" Margin="8,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,25,0">
                                <Border Width="18" Height="18" Background="{StaticResource SecondaryBrush}" CornerRadius="2"/>
                                <TextBlock Text=" выбрано" Style="{StaticResource MonoText}" FontSize="11" Foreground="{DynamicResource TextMutedBrush}" Margin="8,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="18" Height="18" Background="#40404040" BorderBrush="#60606060" BorderThickness="1" CornerRadius="2"/>
                                <TextBlock Text=" занято" Style="{StaticResource MonoText}" FontSize="11" Foreground="{DynamicResource TextMutedBrush}" Margin="8,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="25,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Оформление" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,20"/>

                        <TextBlock Text="ТЕЛЕФОН" Style="{StaticResource MonoText}" FontSize="10" Foreground="{DynamicResource TextMutedBrush}"/>
                        <TextBox x:Name="PhoneTb" Style="{StaticResource FormTextBox}" Margin="0,10,0,16"/>

                        <TextBlock Text="ФИО КЛИЕНТА" Style="{StaticResource MonoText}" FontSize="10" Foreground="{DynamicResource TextMutedBrush}"/>
                        <TextBox x:Name="NameTb" Style="{StaticResource FormTextBox}" Margin="0,10,0,16"/>

                        <TextBlock Text="СПОСОБ ОПЛАТЫ" Style="{StaticResource MonoText}" FontSize="10" Foreground="{DynamicResource TextMutedBrush}"/>
                        <ComboBox x:Name="PaymentMethodCb" Style="{StaticResource FormComboBox}" Margin="0,10,0,16">
                            <ComboBoxItem Content="Карта"/>
                            <ComboBoxItem Content="Наличные"/>
                        </ComboBox>

                        <Border Height="1" Background="#268B5CF6" Margin="0,10,0,20"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Выбрано мест:" Style="{StaticResource MonoText}" FontSize="11" Foreground="{DynamicResource TextMutedBrush}"/>
                            <TextBlock x:Name="SelectedCountTb" Text="0" Style="{StaticResource MonoText}" FontSize="11" Margin="10,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Итого:" Style="{StaticResource MonoText}" FontSize="11" Foreground="{DynamicResource TextMutedBrush}"/>
                            <TextBlock x:Name="TotalTb" Text="0 ₽" Style="{StaticResource MonoText}" FontSize="11" Margin="10,0,0,0"/>
                        </StackPanel>

                        <Button x:Name="SellBtn" Content="Продать" Style="{StaticResource PrimaryButtonStyle}" Margin="0,25,0,0" Click="SellBtn_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
