<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ====== DARK THEME ====== -->
    <Color x:Key="BgMainColor">#0F0A1E</Color>
    <Color x:Key="BgSecondaryColor">#1A1430</Color>

    <Color x:Key="TextPrimaryColor">#F5F3FF</Color>
    <Color x:Key="TextSecondaryColor">#C4B5FD</Color>
    <Color x:Key="TextMutedColor">#A78BFA</Color>

    <!-- Backgrounds -->
    <LinearGradientBrush x:Key="AppBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource BgMainColor}" Offset="0"/>
        <GradientStop Color="{StaticResource BgSecondaryColor}" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#991A1430"/>
    <SolidColorBrush x:Key="DividerBrush" Color="#268B5CF6"/>

    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#80251C3D"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="#268B5CF6"/>

    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}"/>

    <!-- Controls -->
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#801A1430"/>
    <SolidColorBrush x:Key="ControlBackgroundFocusedBrush" Color="#B31A1430"/>
    <SolidColorBrush x:Key="ControlBorderBrush" Color="#338B5CF6"/>
    <SolidColorBrush x:Key="ControlBorderFocusedBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="ControlForegroundBrush" Color="{StaticResource TextPrimaryColor}"/>

    <!-- Popups (ComboBox / Calendar) -->
    <SolidColorBrush x:Key="PopupBackgroundBrush" Color="#FF1A1430"/>
    <SolidColorBrush x:Key="PopupBorderBrush" Color="#338B5CF6"/>
    <SolidColorBrush x:Key="PopupForegroundBrush" Color="{StaticResource TextPrimaryColor}"/>

    <!-- Hovers / selection -->
    <SolidColorBrush x:Key="HoverBrush" Color="#1A8B5CF6"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="#26EC4899"/>
    <SolidColorBrush x:Key="NavHoverBrush" Color="#1A8B5CF6"/>
    <SolidColorBrush x:Key="NavActiveBrush" Color="#26EC4899"/>

    <!-- Outline button -->
    <SolidColorBrush x:Key="OutlineButtonForegroundBrush" Color="#F9A8D4"/>
    <SolidColorBrush x:Key="OutlineButtonBorderBrush" Color="#66EC4899"/>
    <SolidColorBrush x:Key="OutlineButtonHoverBrush" Color="#33EC4899"/>

    <!-- DataGrid -->
    <SolidColorBrush x:Key="DataGridRowBrush" Color="#40251C3D"/>
    <SolidColorBrush x:Key="DataGridAltRowBrush" Color="#33251C3D"/>

</ResourceDictionary>
