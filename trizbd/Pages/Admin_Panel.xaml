<Page x:Class="trizbd.Pages.Admin_Panel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="Администрирование">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="60,50,60,50">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Администрирование" Style="{StaticResource PageTitle}"/>
                <TextBlock Text="СОТРУДНИКИ" Style="{StaticResource PageSubtitle}" Margin="0,10,0,0"/>
            </StackPanel>

            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,25" Padding="22">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Добавить сотрудника" FontSize="20" FontWeight="SemiBold"/>
                        <Button Content="Обновить" Style="{StaticResource OutlineButtonStyle}" Margin="20,0,0,0" Click="RefreshBtn_Click"/>
                    </StackPanel>

                    <Grid Margin="0,18,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,16,0">
                            <TextBlock Text="ФИО" Style="{StaticResource MonoText}" FontSize="10" Foreground="{DynamicResource TextMutedBrush}"/>
                            <TextBox x:Name="FullNameTb" Style="{StaticResource FormTextBox}" Margin="0,10,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="0,0,16,0">
                            <TextBlock Text="ЛОГИН" Style="{StaticResource MonoText}" FontSize="10" Foreground="{DynamicResource TextMutedBrush}"/>
                            <TextBox x:Name="LoginTb" Style="{StaticResource FormTextBox}" Margin="0,10,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="0,0,16,0">
                            <TextBlock Text="ПАРОЛЬ" Style="{StaticResource MonoText}" FontSize="10" Foreground="{DynamicResource TextMutedBrush}"/>
                            <PasswordBox x:Name="PasswordTb" Background="{DynamicResource ControlBackgroundBrush}" Foreground="{DynamicResource ControlForegroundBrush}" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" Padding="14,10" FontSize="16" Margin="0,10,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3">
                            <TextBlock Text="РОЛЬ" Style="{StaticResource MonoText}" FontSize="10" Foreground="{DynamicResource TextMutedBrush}"/>
                            <ComboBox x:Name="RoleCb" Style="{StaticResource FormComboBox}" Margin="0,10,0,0">
                                <ComboBoxItem Content="Оператор"/>
                                <ComboBoxItem Content="Администратор"/>
                            </ComboBox>
                            <CheckBox x:Name="IsActiveCb" Content="Активен" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Grid>

                    <Button Content="Добавить" Style="{StaticResource PrimaryButtonStyle}" Padding="16,10" Margin="0,20,0,0" HorizontalAlignment="Left" Click="AddBtn_Click"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Список сотрудников" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,20"/>
                    <DataGrid x:Name="EmployeesGrid" Style="{StaticResource DataGridDark}" Height="360">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ИД" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="*"/>
                            <DataGridTextColumn Header="ЛОГИН" Binding="{Binding Login}" Width="180"/>
                            <DataGridTextColumn Header="РОЛЬ" Binding="{Binding Role}" Width="140"/>
                            <DataGridTextColumn Header="АКТИВЕН" Binding="{Binding Active}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
