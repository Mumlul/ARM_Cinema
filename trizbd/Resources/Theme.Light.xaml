<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ====== LIGHT THEME ====== -->
    <Color x:Key="BgMainColor">#F7F7FB</Color>
    <Color x:Key="BgSecondaryColor">#E9ECF5</Color>

    <Color x:Key="TextPrimaryColor">#111827</Color>
    <Color x:Key="TextSecondaryColor">#374151</Color>
    <Color x:Key="TextMutedColor">#6B7280</Color>

    <!-- Backgrounds -->
    <LinearGradientBrush x:Key="AppBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource BgMainColor}" Offset="0"/>
        <GradientStop Color="{StaticResource BgSecondaryColor}" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#CCFFFFFF"/>
    <SolidColorBrush x:Key="DividerBrush" Color="#22000000"/>

    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#F2FFFFFF"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="#22000000"/>

    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}"/>

    <!-- Controls -->
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FFF3F4F6"/>
    <SolidColorBrush x:Key="ControlBackgroundFocusedBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="ControlBorderBrush" Color="#33000000"/>
    <SolidColorBrush x:Key="ControlBorderFocusedBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="ControlForegroundBrush" Color="{StaticResource TextPrimaryColor}"/>

    <!-- Popups (ComboBox / Calendar) -->
    <SolidColorBrush x:Key="PopupBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="PopupBorderBrush" Color="#33000000"/>
    <SolidColorBrush x:Key="PopupForegroundBrush" Color="{StaticResource TextPrimaryColor}"/>

    <!-- Hovers / selection -->
    <SolidColorBrush x:Key="HoverBrush" Color="#148B5CF6"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="#26EC4899"/>
    <SolidColorBrush x:Key="NavHoverBrush" Color="#148B5CF6"/>
    <SolidColorBrush x:Key="NavActiveBrush" Color="#26EC4899"/>

    <!-- Outline button -->
    <SolidColorBrush x:Key="OutlineButtonForegroundBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="OutlineButtonBorderBrush" Color="#66EC4899"/>
    <SolidColorBrush x:Key="OutlineButtonHoverBrush" Color="#1AEC4899"/>

    <!-- DataGrid -->
    <SolidColorBrush x:Key="DataGridRowBrush" Color="#08FFFFFF"/>
    <SolidColorBrush x:Key="DataGridAltRowBrush" Color="#0FFFFFFF"/>

</ResourceDictionary>
